[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
  force = true

[[headers]]
  # Enable CORS for all origins
  Access-Control-Allow-Origin = "*"
  # Set X-Content-Type-Options header to prevent MIME sniffing
  X-Content-Type-Options = "nosniff"
  # Set X-XSS-Protection header to prevent cross-site scripting attacks
  X-XSS-Protection = "1; mode=block"
  # Set Strict-Transport-Security header to force HTTPS
  Strict-Transport-Security = "max-age=31536000; includeSubDomains; preload"

[[headers]]
  # Set Content Security Policy header to prevent cross-site scripting attacks
  # and other security vulnerabilities
  Content-Security-Policy = "default-src 'self'; script-src 'self' 'unsafe-inline'"
  # Set Referrer-Policy header to prevent leaking sensitive information
  Referrer-Policy = "same-origin"
